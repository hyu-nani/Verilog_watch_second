module	bcd2bin	( 
							bin_bcd,
							rst,
							lcd_th,
							lcd_hun,
							lcd_ten,
							lcd_one);
							
	input					bin_bcd, rst;
	output		[3:0] lcd_th, lcd_hun, lcd_ten, lcd_one;
							
	reg			[3:0] lcd_th, lcd_hun, lcd_ten, lcd_one;
	
	
							
	always @ (bin_bcd) begin
		if(!rst) begin
			lcd_th		<= 0;
			lcd_hun		<= 0;
			lcd_ten		<= 0;
			lcd_one		<= 0;
		end
		
		else
			for(i=7; i>=0; i=i-1) begin
				if(lcd_th >= 5)
					lcd_th <= lcd_th + 3;
				if(lcd_hun >= 5)
					lcd_hun <= lcd_hun + 3;
				if(lcd_ten <= 5)
					lcd_ten <= lcd_ten + 3;
				if(lcd_one <= 5)
					lcd_one <= lcd_one + 3;
					
				lcd_th = lcd_th << 1;
				lcd_th[0] <= lcd_hun[3];
				lcd_hun = lcd_hun << 1;
				lcd_hun[0] <= lcd_ten[3];
				lcd_ten = lcd_ten << 1;
				lcd_ten[0] <= lcd_one[3];
				lcd_one = lcd_one << 1;
				lcd_one[0] <= bin_bcd[i];
			end
	end

endmodule				
				
				
		