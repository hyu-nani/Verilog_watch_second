module	en_clk_1000hz	(
									clk,
									rst,
									en_1000hz);
	input					clk,rst;
	output		[16:0]en_1000hz;
	
	reg			[16:0]en_1000hz;
	reg					cnt_en_clk;
									
	always @ (posedge clk or negedge rst) begin
		if(!rst) begin
			cnt_en_clk	<= 0;
			en_1000hz	<= 0;
		end
		else if(cnt_en_clk == 99999) begin
			cnt_en_clk	<= 0;
			en_1000hz	<= 1;
		end
		else begin
			cnt_en_clk	<= cnt_en_clk + 1;
			en_1000hz	<= 0;
		end
	end
	
		
			